{
    "compilerOptions": {
        "module": "NodeNext",
        "target": "ES2021",
        "moduleResolution": "NodeNext",
        "sourceMap": true,
        "allowJs": true,
        "strict": true,
        "skipLibCheck": true,
        "incremental": true,
        "strictNullChecks": false,
        "noImplicitAny": false,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": "src",
        "outDir": "dist"
    },
    "include": ["src/**/*"]
}
